@model DapCare.Models.party

@{
    ViewBag.Title = "EditParty";
}

<h2>EditParty</h2>

@using (Html.BeginForm("EditParty", "Admin", FormMethod.Post,
                             new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>party</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PartyId)

        @{
            List<SelectListItem> data = ViewBag.getAllEMployee;
        }



        <div class="form-group">
            @Html.LabelFor(model => model.EmployeId, htmlAttributes: new { @class = "control-label col-md-2" })
