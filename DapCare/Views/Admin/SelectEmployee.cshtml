@model DapCare.Models.Employe

@{
    ViewBag.Title = "SelectEmployee";
}

<h2>SelectEmployee</h2>

@using (Html.BeginForm("GetSelectedEmploye", "Admin",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Employe</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @{


        List<SelectListItem> data = ViewBag.getAllEMployee;
    }

    <div class="form-group">
        @Html.LabelFor(model => model.EmployeId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.EmployeId, data, "--select---")
            @Html.ValidationMessageFor(model => model.EmployeId, "", new { @class = "text-danger" })
        </div>
    </div>







    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Select" class="btn btn-default" />
        </div>
    </div> 
</div>
}


